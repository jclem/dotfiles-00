{{ $codespaces := env "CODESPACES" | not | not -}}
{{ $email := "" -}}
{{ $gpgkeyid := "" -}}

{{ if $codespaces -}}
  {{ $email = "j@jclem.me" -}}
{{ else -}}
  {{ $email = promptString "email" -}}
{{ end -}}

{{ if not $codespaces -}}
  {{ $gpgkeyid = promptString "gpg key ID" -}}
{{ end -}}

[data]
  codespaces = {{ $codespaces }}

[data.user]
  email = {{ $email | quote }}

[data.gpg]
{{ if $gpgkeyid -}}
  keyid = {{ $gpgkeyid | quote }}
{{ else }}
  keyid = false
{{ end -}}